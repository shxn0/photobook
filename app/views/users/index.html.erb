<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <% unless current_user.id == user.id %>
          <%= profile_img(user) %>
          <div class="follow_name">
          <%= link_to user_path(user) do %>
            <strong><%= user.name %></strong>
          <% end %>
          </div>
          <%= render 'follow_form', user: user %>
        <% end %>
      </div>
  <% end %>
</div>
