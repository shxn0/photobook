<div class="container">
  <div class="profile col-md-4 col-md-offset-4 col-xs-1">
    <div class="panel">
      <div class="panel-name">
        <h3><%= @user.name %></h3>
      </div>
      <div class="panel-profile">
        <%= profile_img(@user) %>
      </div>
    </div>
  </div>

  <div class="users">
    <div class="follows col-md-6 col-xs-1">
      <h4>Follows</h4>
      <% @user.followed_users.each do |followed_user| %>
        <div class="user col-md-6 col-xs-1">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="img-child"><%= profile_img(followed_user) %></div>
            <%= followed_user.name %>
          </div>
        </div>
        </div>
      <% end %>
    </div>

    <div class="followers col-md-6 col-xs-1">
      <h4>Followers</h4>
      <% @user.followers.each do |follower| %>
        <div class="user col-md-6 col-xs-1">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="img-child"><%= profile_img(follower) %></div>
            <%= follower.name %>
          </div>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", users_path, class:"btn btn-lg btn-link" %>
