<%= form_for([wall, comment], remote: true) do |f| %>
  <% if comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= comment.errors.count %>件のエラーがあります %></h2>
    <ul>
      <% comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.hidden_field :wall_id %>

  <div class="field">
    <%= f.text_field :context, placeholder: "内容", class: "form-control"  %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-sm"%>
  </div>
<% end %>
