<div class="container">
  <!-- <p id="notice"><%= notice %></p> -->
  <div class="row col-md-8 col-md-offset-2">
    <% if notice.nil? ==false %>
      <div class="alert alert-success" role="alert">
        <p class="flash"><%= notice %><%= alert %></p>
      </div>
    <% end %>
  </div>
  <br>

  <div class="child row">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <div class="blog-text">
        <p class="left"><strong>タイトル</strong></p>
        <p class="left"><%= @wall.title %></p>
        <p class="left"><strong>内容</strong></p>
        <p class="left"><%= @wall.content %></p>
        <p class="right">
          <strong>作成時間:</strong>
          <%= @wall.created_at.strftime("%y/%m/%d %p %l:%M") %>
        </p>
      </div>
      <p>コメント一覧</p>
      <div id="comments_area">
        <%= render partial:"comments/index", locals:{comments: @comments, wall: @wall} %>
      </div>
      <%= render partial:"comments/form", locals: {comment: @comment, wall: @wall} %>
      <% if current_user.id == @wall.user_id %>
        <%= link_to "Edit", edit_wall_path(@wall) %>
      <% end %>
      <%= link_to "Back", walls_path %>
    </div>
  </div>
</div>
