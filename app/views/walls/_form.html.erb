<%= form_for(@wall) do |f| %>
  <% if @wall.errors.any? %>
    <div id= "error_explanation">
      <h2><%= @wall.errors.count %>件のエラーがあります</h2>
      <%= @wall.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %><br>
  <%= f.label :内容 %>
  <%= f.text_area :content, class: 'form-control' %><br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
